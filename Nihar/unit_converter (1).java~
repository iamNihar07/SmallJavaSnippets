    void length()throws IOException
    {
        System.out.println("1.Millimetre to others ");
        System.out.println("2.Centimetre to others ");
        System.out.println("3.Metre to others ");
        System.out.println("4.Kilometre to others ");
        sopln("5.Foot to others");
        sopln("6.Miles to others")
        sopln("7.Nautical miles to others");
        sopln("8.Yards to anothers");
        sopln("9.Go Back");
        int ch=Integer.parseInt(in.readLine());
        
        switch(ch)
        {
            case 1:
            mm();
            break;
            
            case 2:
            cm();
            break;
            
            case 3:
            m();
            break;
            
            case 4:
            km();
            break; 
            
            case 5:
            foot();
            break;
            
            case 6:
            miles();
            break;
            
            case 7:
            nau();
            break;
            
            case 8:
            yards();
            break;
            
            case 9:
            scientfic_conversion();
            break;
            
            default:
            length();
            
        }
    }
    void mm()
    {
        sopln("1.To Centi-metre");
        sopln("2.To Metre");
        sopln("3.To Kilo -metre");
        sopln("4.To Inch");
        sopln("5.Go Back");
        int c=Integer.parseInt(in.readLine());
         
        System.out.println("Enter value in mm you want to convert");
        double mim=Integer.parseInt(in.readLine());
        
        System.out.println("\f");//clear screen 
        switch(c)
        {
            case 1:
            double centi=mim/10;
            Converting();
            System.out.println(mim+ " Millimetres = "+centi +"Centi-metres");
            mm();
            break;
            
            case 2:
            double metre=mim/1000;
            Converting();
            System.out.println(mim+" Millimetres = "+metre+ "Metres");
            mm();
            break;
            
            case 3:
            double kilo=mim/1000000;
            Conerting();
            System.out.println(mim+ " Millimetres ="+kilo+ " Kilo-metres");
            mm();
            break;
            
            case 4:
            double inch=mim*0.0393;
            Converting();
            System.out.println(mim+" Millimetres = "+inch+" Inches");
            mm();
            break;
            
            case 5:
            length();
            break;
            
            default :
            mm();
        }
    }
